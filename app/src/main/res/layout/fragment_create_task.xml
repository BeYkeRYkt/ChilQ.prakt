<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".employment.CreateTask">


    <TextView
        android:id="@+id/textViewRewardVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextReward"
        android:layout_alignParentStart="true"
        android:layout_marginStart="136dp"
        android:fontFamily="@font/roboto"
        android:text="Награда: "
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextReward"
        style="@style/FullWidthEditText"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:background="@drawable/theme_edittext"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="numberSigned"
        android:text=""
        android:textSize="15sp" />


    <com.marozzi.roundbutton.RoundButton
        android:id="@+id/button"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_marginEnd="19dp"
        android:text="Загрузить фото"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bGroup"
        app:layout_constraintVertical_bias="0.0"
        app:rb_animation_alpha="false"
        app:rb_animation_corner_radius="20dp"
        app:rb_animation_duration="500"
        app:rb_animation_progress_color="@color/colorPrimaryDark"
        app:rb_animation_progress_padding="8dp"
        app:rb_animation_progress_style="dots"
        app:rb_background_color="@color/white"
        app:rb_background_color_pressed="@color/colorPrimaryDark"
        app:rb_corner_color="@color/colorPrimaryDark"
        app:rb_corner_color_pressed="@color/colorPrimaryDark"
        app:rb_corner_radius="2dp"
        app:rb_corner_width="1dp"
        app:rb_text_color="@color/colorPrimaryDark"
        app:rb_text_color_pressed="@android:color/white" />


    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/roboto"
        android:text="Описание задания:"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextDescription"
        style="@style/FullWidthEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTaskDescription"
        android:background="@drawable/theme_edittext"
        android:fontFamily="@font/roboto"
        android:inputType="textMultiLine"
        android:maxLines="6" />

    <EditText
        android:id="@+id/editTextNameTask"
        style="@style/FullWidthEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="222dp"
        android:background="@drawable/theme_edittext"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="15sp" />


    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/upload_arrow" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/imageButtonAdd"
        android:layout_marginEnd="-136dp"
        android:layout_toStartOf="@+id/textViewRewardVal"
        android:background="@drawable/back_but"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="335dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/imageButtonAdd"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/not_okey_but"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="335dp" />


    <TextView
        android:id="@+id/textViewNameTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/roboto"
        android:text="Название задания:"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold" />

</RelativeLayout>